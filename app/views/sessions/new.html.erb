<div class="auth-container">
  <h2>Log In</h2>

  <% if flash[:alert] %>
    <div class="alert"><%= flash[:alert] %></div>
  <% end %>

  <%= form_with url: login_path, local: true, scope: :session, data: { turbo: false } do |form| %>
    <div class="form-group">
      <%= form.label :user_name, "Username" %>
      <%= form.text_field :user_name, required: true, class: "form-input" %>
    </div>

    <div class="form-group">
      <%= form.label :password %>
      <%= form.password_field :password, required: true, class: "form-input" %>
    </div>

    <%= form.submit "Log In", class: "form-button" %>
  <% end %>

  <p>Don't have an account? <%= link_to "Sign up", new_user_path %></p>
</div>