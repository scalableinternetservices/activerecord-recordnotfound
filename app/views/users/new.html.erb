<div class="auth-container">
  <h2>Sign Up</h2>

  <% if flash[:alert] %>
    <div class="alert"><%= flash[:alert] %></div>
  <% end %>

  <%= form_with model: @user, local: true, data: { turbo: false } do |form| %>
    <div class="form-group">
      <%= form.label :user_name, "Username" %>
      <%= form.text_field :user_name, required: true, class: "form-input" %>
      <%= render 'shared/errors', errors: @user.errors[:user_name] %>
    </div>

    <div class="form-group">
      <%= form.label :password %>
      <%= form.password_field :password, required: true, class: "form-input" %>
      <%= render 'shared/errors', errors: @user.errors[:password] %>
    </div>

    <div class="form-group">
      <%= form.label :password_confirmation, "Confirm Password" %>
      <%= form.password_field :password_confirmation, required: true, class: "form-input" %>
      <%= render 'shared/errors', errors: @user.errors[:password_confirmation] %>
    </div>

    <%= form.submit "Create Account", class: "form-button" %>
  <% end %>

  <p>Already have an account? <%= link_to "Log in", login_path %></p>
</div>
