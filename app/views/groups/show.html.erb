<div class="profile-container">
    <h2><%= @group.group_name %></h2>

    <h4> <%= @group.count_users_in_group(@group.id)%> Members <h4>
    <h4> Admin: <%= @group.admin.user_name%> <h4>

    <% if current_user.in_group?(@group.id) %>
        <% if @group.admin_id == current_user.id %>
            <div class="request-actions">
            <%= button_to 'Delete Group', group_path(@group), method: :delete, data: { confirm: 'Are you sure?' }, class: 'reject-button' %>
            </div>
        <% else %>
            <div class="request-actions">
            <%= button_to 'Leave Group', leave_group_group_path(@group), method: :post, data: { confirm: 'Are you sure?' }, class: 'reject-button' %>
            </div>
        <% end %>
    <% else %>
        <div class="request-actions">
        <%= button_to 'Join Group', join_group_group_path(@group), method: :post, class: 'accept-button' %>
        </div>
    <% end %>

    <section class="profile-section">
            <h3>Posts</h3>
            <% if @posts.any? %>
            <ul class="post-list">
                <% @posts.each do |post| %>
                <li class="post-item">
                    <span class="post-title"><%= post.title %></span>
                    <%= link_to 'View Post', post_path(post), class: "view-post-link" %>
                </li>
                <% end %>
            </ul>
            <% else %>
            <p class="no-posts">No posts yet.</p>
            <% end %>
    </section>
</div>